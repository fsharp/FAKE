<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Le styles -->
    <link href="@Url.Content("~/Bootstrap/css/bootstrap.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/jquery.fileupload-ui.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/toastr.css")" rel="stylesheet">
    <style>
        body {
            <a href="~/Views/Shared/_Layout.cshtml">~/Views/Shared/_Layout.cshtml</a> padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
        }
    </style>
    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <!-- Le fav and touch icons -->
    <link rel="shortcut icon" href="/favicon.ico">
    <script src="@Url.Content("~/Scripts/jquery-1.8.3.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.serializeToJson.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Bootstrap/js/bootstrap.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/toastr.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/knockout-2.2.0.debug.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/knockout.mapping-latest.debug.js")" type="text/javascript"></script>
    @RenderSection("scripts", false)
</head>

<body>

    <div class="navbar navbar-inverse">
        <div class="navbar-inner">
            <a class="brand" href="#">Fake Deploy Web</a>
            <ul class="nav">
                <li class="active divider-vertical"><a href="@Url.Action("Index", "Home")">Home</a></li>
                @if (User.IsInRole("Administrator"))
                {
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Administration<b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("Environment", "Admin")">Environments</a></li>
                            <li><a href="@Url.Action("Agent", "Admin")">Agents</a></li>
                            <li><a href="@Url.Action("Users", "Admin")">Users</a></li>
                        </ul>
                    </li>
                }
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>

    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                @RenderBody()
            </div>
        </div>
        <hr>
        <footer>
            <p>&copy; @DateTime.Now.Year - Fake Deploy Web - @Fake.Deploy.Web.Global.Version</p>
        </footer>
    </div>
</body>
</html>
